@page "{handler?}/{nameFile?}"
@model UploadFile.WebUI.Pages.Storage.IndexModel
@{
    var no = 1;
}

<h1>File Storage in Azure Storage</h1>

<form method="post" enctype="multipart/form-data" asp-page-handler="Upload">
    <input type="file" asp-for="@Model.Upload" />
    <input type="submit" />
</form>

@Model.Message

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">No</th>
            <th scope="col">Name File</th>
            <th scope="col">Download</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var file in Model.FileFolders.NameFiles)
        {
            <tr>
                <th scope="row">@no</th>
                <td>@file.Name</td>
                <td>
                    <form method="post" asp-page-handler="Download">
                        <input type="hidden" name="nameFile" value="@file.Name"/>
                        <button>Download</button>
                    </form>
                    <form method="post" asp-page-handler="Delete">
                        <input type="hidden" name="nameFile" value="@file.Name"/>
                        <button>Delete</button>
                    </form>
                </td>
            </tr>
            no++;
        }
    </tbody>
</table>